public class LeapYearChecker {
    public boolean isLeapYear(int year) {
        return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
    }

    public static void main(String[] args) {
        LeapYearChecker checker = new LeapYearChecker();
        
        // Тестирование различных случаев
        System.out.println(checker.isLeapYear(2024)); 
        System.out.println(checker.isLeapYear(2000)); 
        System.out.println(checker.isLeapYear(1900)); 
        System.out.println(checker.isLeapYear(2023)); 
        System.out.println(checker.isLeapYear(2400)); 
    }
}
