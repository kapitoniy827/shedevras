public class NumberSignChecker {
    
    public void checkNumberSign(int number) {
        if (number >= 0) {
            System.out.println("Число положительное");
        } else {
            System.out.println("Число отрицательное");
        }
    }

    public static void main(String[] args) {
        NumberSignChecker checker = new NumberSignChecker();
        
        // Примеры использования метода
        checker.checkNumberSign(10);   // Число положительное
        checker.checkNumberSign(-5);   // Число отрицательное
        checker.checkNumberSign(0);    // Число положительное
        checker.checkNumberSign(100);  // Число положительное
        checker.checkNumberSign(-100); // Число отрицательное
    }
}
