public class SumChecker {
    public static void checkSumSign() {
        int a = 15;    
        int b = -7;    
        int sum = a + b;
        if (sum >= 0) {
            System.out.println("Сумма положительная");
        } else {
            System.out.println("Сумма отрицательная");
        }
    }
    public static void main(String[] args) {
        checkSumSign();
    }
}
